@model Expensy.Models.GroupCreateViewModel

<h2>Create Group</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="GroupName">Group Name:</label>
        <input asp-for="GroupName" class="form-control" />
        <span asp-validation-for="GroupName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserIds">Users (comma-separated):</label>
        <input asp-for="UserIds" class="form-control" />
        <span asp-validation-for="UserIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Group</button>
</form>
